<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/grisFondo"
    tools:context="com.example.jano.simon.MainActivity">


    <Button
        android:text=""
        android:layout_width="50pt"
        android:layout_height="40pt"
        android:layout_marginTop="18dp"
        android:id="@+id/bVerde"
        android:onClick="verificar"
        android:background="@drawable/bplverde"
        android:layout_below="@+id/bRojo"
        android:layout_alignStart="@+id/bRojo" />

    <Button
        android:text=""
        android:layout_width="50pt"
        android:layout_height="40pt"
        android:id="@+id/bAmarillo"
        android:onClick="verificar"
        android:background="@drawable/bplamarillo"
        android:layout_alignBottom="@+id/bVerde"
        android:layout_alignStart="@+id/bAzul"
        android:layout_alignTop="@+id/bVerde" />

    <Button
        android:text=""
        android:layout_width="50pt"
        android:layout_height="40pt"
        android:id="@+id/bAzul"
        android:onClick="verificar"
        android:layout_marginStart="26dp"
        android:background="@drawable/bplazul"
        android:layout_alignBottom="@+id/bRojo"
        android:layout_toEndOf="@+id/bRojo"
        android:layout_alignTop="@+id/bRojo" />

    <Button
        android:text=""
        android:layout_width="50pt"
        android:layout_height="40pt"
        android:layout_marginTop="72dp"
        android:id="@+id/bRojo"
        android:onClick="verificar"
        android:background="@drawable/bplrojo"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Nv.1"
        android:layout_width="20pt"
        android:layout_height="20pt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="ponNivel"
        android:background="@drawable/boton_plano"
        android:id="@+id/bnivel1" />

    <Button
        android:text="Nv.3"
        android:layout_width="20pt"
        android:layout_height="20pt"
        android:id="@+id/bnivel3"
        android:onClick="ponNivel"
        android:background="@drawable/boton_plano"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/bAmarillo"
        android:layout_toStartOf="@+id/bAmarillo" />

    <Button
        android:text="Nv.4"
        android:layout_width="20pt"
        android:layout_height="20pt"
        android:onClick="ponNivel"
        android:background="@drawable/boton_plano"
        android:id="@+id/bnivel4"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/bnivel3"
        android:layout_toEndOf="@+id/bnivel3"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <Button
        android:text="Nv.5"
        android:layout_width="20pt"
        android:layout_height="20pt"
        android:onClick="ponNivel"
        android:background="@drawable/boton_plano"
        android:id="@+id/bnivel5"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/bnivel4"
        android:layout_toEndOf="@+id/bnivel4"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

    <Button
        android:text="SALIR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bSalir"
        android:onClick="salir"
        android:background="@drawable/boton_plano"
        android:layout_alignBaseline="@+id/bEmpezar"
        android:layout_alignBottom="@+id/bEmpezar"
        android:layout_alignLeft="@+id/bnivel4"
        android:layout_alignStart="@+id/bnivel4" />

    <Button
        android:text="EMPEZAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bEmpezar"
        android:background="@drawable/boton_plano"
        android:onClick="jugar"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/bVerde"
        android:layout_alignRight="@+id/bVerde"
        android:layout_alignEnd="@+id/bVerde" />

    <Button
        android:text="NV.2"
        android:layout_width="20pt"
        android:layout_height="20pt"
        android:id="@+id/bnivel2"
        android:background="@drawable/boton_plano"
        android:onClick="ponNivel"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/bEmpezar"
        android:layout_alignStart="@+id/bEmpezar" />

</RelativeLayout>
